{
  "compilerOptions": {
    "target": "ES2020",                 // 编译目标：ES2020
    "module": "commonjs",               // Node.js 使用 CommonJS 模块系统
    "lib": ["ES2020"],                  // 使用 ES2020 的标准库
    "strict": true,                     // 启用严格模式
    "esModuleInterop": true,            // 支持默认导入 CommonJS 模块
    "skipLibCheck": true,               // 跳过库文件类型检查，加快编译
    "moduleResolution": "node",         // Node.js 模块解析方式
    "outDir": "./dist",                 // 输出目录
    "rootDir": "./",                    // 源文件根目录
    "resolveJsonModule": true           // 支持导入 JSON 文件
  },
  "include": ["server/**/*.ts"],        // 包含 server 目录下的所有 TypeScript 文件
  "exclude": ["node_modules", "dist"]  // 排除 node_modules 和 dist 目录
}

